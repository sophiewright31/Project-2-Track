{% extends 'layout.html.twig' %}
{% block figthers %}

    <div class="container-fluid figthers">

        <div class="row">
            <div class="col-4"></div>
            <div class="col-4"><p class="blue-neon">Ils ont re√ßu le plus de votes sur leurs chansons</p></div>
            <div class="col-4"></div>


            <ul class="pagination">

                {% set i = 0 %}
                <li class="col-1"></li>
                {% for userData in users %}

                    <li class="col-1 container-fighter">
                        <div class="fighters-name">{{ userData.pseudo }}</div>
                        <div class="row">
                                <form action="" class="d-inline" method="GET"><a class="blue-neon" href="/Connect/all/{{ userData.id }}">Supported</a></form>
                            </div>
                        <div class="card card-fighters">

                            <img {% if userData.github %} src="https://avatars.githubusercontent.com/{{ userData.github }}" {% else %} src="/assets/images/dj.jpeg" {% endif %}
                                     class="card-img-top" alt="image of a DJ">
                            <p class="netflix-number card-text">{% set i = i + 1 %}{{ i }}</p>
                        </div>

                    </li>

                {% endfor %}
                <li class="col-1"></li>
            </ul>
        {% if totalPowerById %}
        <div class="col-5"></div>
            <div class="col-1">
                    <progress id="vote" max="{{ totalPower.total }}" value="{{ totalPowerById.total }}"></progress>
            </div>
            <div class="col-3">
                <p class="blue-neon"> sur un total de {{ totalPower.total }}</p>
            </div>
            <div class="col-3></div>
        {% endif %}
    </div>
    </div>
{% endblock %}


